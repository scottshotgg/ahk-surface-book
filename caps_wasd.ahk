#InstallKeybdHook  
#Persistent

SetCapsLockState, AlwaysOff

Capslock & a::Send {Blind}{Left DownTemp}
Capslock & a up::Send {Blind}{Left Up}


Capslock & s::Send {Blind}{Down DownTemp}
Capslock & s up::Send {Blind}{Down Up}


Capslock & w::Send {Blind}{Up DownTemp}
Capslock & w up::Send {Blind}{Up Up}


Capslock & d::Send {Blind}{Right DownTemp}
Capslock & d up::Send {Blind}{Right Up}


Capslock & Backspace::Send {Blind}{Delete DownTemp}
Capslock & Backspace up::Send {Blind}{Delete Up}


Capslock & o::Send {Blind}{SC029 DownTemp}
Capslock & o up::Send {Blind}{SC029 Up}


Capslock & i::Send {Blind}+{SC029 DownTemp}
Capslock & i up::Send {Blind}+{SC029 Up}


Capslock & k::Send {Blind}{Delete DownTemp}
Capslock & k up::Send {Blind}{Delete Up}


Capslock & j::Send {Blind}{Backspace DownTemp}
Capslock & j up::Send {Blind}{Backspace Up}


Capslock & Space::Send {Blind}{LWin DownTemp}
Capslock & Space up::Send {Blind}{LWin Up}


Capslock & /::Send {Blind}{\ DownTemp}
Capslock & / up::Send {Blind}{\ Up}


Capslock & Tab::Send {Blind}{Capslock DownTemp}
Capslock & Tab up::Send {Blind}{Capslock Up}


F9::Send {Blind}{Media_Prev DownTemp}
F9 up::Send {Blind}{Media_Prev Up}


F10::Send {Blind}{Media_Next DownTemp}
F10 up::Send {Blind}{Media_Next Up}


Capslock & q::Send {Blind}{Volume_Down DownTemp}
Capslock & q up::Send {Blind}{Volume_Down Up}


Capslock & e::Send {Blind}{Volume_up DownTemp}
Capslock & e up::Send {Blind}{Volume_Up Up}


Capslock & r::Send {Blind}{Volume_Mute DownTemp}
Capslock & r up::Send {Blind}{Volume_Mute Up}


Capslock & x::Send {Blind}{Media_Play_Pause DownTemp}
Capslock & x up::Send {Blind}{Media_Play_Pause Up}


Capslock & c::Send {Blind}{Media_Prev DownTemp}
Capslock & c up::Send {Blind}{Media_Prev Up}


Capslock & v::Send {Blind}{Media_Next DownTemp}
Capslock & v up::Send {Blind}{Media_Next Up}



